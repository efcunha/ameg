# Configurações de Produção
SECRET_KEY=your-super-secret-key-here-change-this
DATABASE_PATH=/app/data/ameg.db
UPLOAD_FOLDER=/app/data/uploads/saude

# Senha do usuário admin (se não definida, será gerada automaticamente)
ADMIN_PASSWORD=your-complex-admin-password-here

# Configurações do Flask
FLASK_ENV=production
FLASK_DEBUG=False

# API REST (Opcional - desabilitada por padrão)
API_ENABLED=false
API_SECRET_KEY=your-jwt-secret-key-32-bytes
API_MASTER_KEY=your-api-master-key-32-bytes
